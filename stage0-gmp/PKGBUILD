# Maintainer: Samuel Holland <samuel@sholland.net>

pkgname=stage0-gmp
pkgver=5.1.3
pkgrel=1
pkgdesc="Temporary GNU MP library - Starch stage 0"
arch=('i686' 'x86_64')
url="http://gmplib.org/"
license=('LGPL3')
source=(ftp://ftp.gmplib.org/pub/gmp-${pkgver}/gmp-${pkgver}.tar.xz{,.sig})
md5sums=('e5fe367801ff067b923d1e6a126448aa'
         'SKIP')

build() {
  cd "${srcdir}/gmp-${pkgver}"

  ./configure \
    --prefix=/stage0 \
    --disable-shared
  make
}

package() {
  cd "${srcdir}/gmp-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
