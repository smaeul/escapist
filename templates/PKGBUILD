pkgbase=xxxx
pkgname=lib${pkgbase}
pkgrel=1
pkgver=2.3.4
pkgdesc="xxxx Utility"
arch=(i686 x86_64)
groups=(base-libs)
license=(custom)
url="http://www.xxxx.org/"
depends=(libyyyy)
source=(http://www.xxxx.org/${pkgbase}/${pkgbase}-${pkgver}.tar.xz{,.sig}
        ${pkgbase}-${pkgver}-p${_patch}.patch
        ${pkgbase}-musl.patch)

prepare() {
  cd ${srcdir}/${pkgbase}-${pkgver}

  patch -p1 -i ${srcdir}/${pkgbase}-${pkgver}-p${_patch}.patch
  patch -p1 -i ${srcdir}/${pkgbase}-musl.patch
}

build() {
  cd ${srcdir}/${pkgbase}-${pkgver}

  ./configure --build=$CHOST --prefix=/usr
  make
}

check() {
  cd ${srcdir}/${pkgbase}-${pkgver}

  make check
}

package() {
  cd ${srcdir}/${pkgbase}-${pkgver}

  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/custom/${pkgname}
}
