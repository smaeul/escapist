_srcname=xxxx
pkgname=lib32-${_srcname}
pkgver=1.0.0
pkgrel=1
pkgdesc="xxxx Library"
arch=('x86_64')
url="http://xxxx.org/"
license=('custom')
groups=('lib32-devel')
source=(http://xxxx/org/pub/${_srcname}/${_srcname}-${pkgver}.tar.gz)

build() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  CC="gcc -m32" \
  ./configure --target=i686-linux-musl \
    --prefix= --libdir=/lib \
    --disable-shared
  make
}

package() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
