_srcname=mpc
pkgname=lib${_srcname}
pkgver=1.0.2
pkgrel=1
pkgdesc="Multiprecision complex-number arithmetic"
arch=('i686' 'x86_64')
url="http://multiprecision.org/"
license=('LGPL')
depends=('libgmp' 'libmpfr')
source=(http://multiprecision.org/${_srcname}/download/${_srcname}-${pkgver}.tar.gz{,.sig}
        ${pkgname}-musl.patch)

prepare() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  patch -p1 -i "${srcdir}/${pkgname}-musl.patch"
}

build() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  ./configure --build=$CHOST --prefix= \
    --disable-shared
  make
}

check() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  make check
}

package() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
