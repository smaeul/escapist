pkgname=gawk
pkgver=4.1.0
pkgrel=1
pkgdesc="GNU awk"
arch=('i686' 'x86_64')
url="http://gnu.org/software/${pkgname}"
license=('GPL')
groups=('devel')
source=(http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.gz{,.sig}
        ${pkgname}-musl.patch)

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  patch -p1 -i "${srcdir}/${pkgname}-musl.patch"
}

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --build=$CHOST --prefix= -libexecdir=/lib \
    --disable-shared --disable-nls --without-libsigsegv
  make
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  # Fails due to no shared linking
  #make check
}
  
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
