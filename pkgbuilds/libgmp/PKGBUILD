pkgname=libgmp
pkgver=5.1.3
pkgrel=1
pkgdesc="Arbitrary precision arithmetic library"
arch=('i686' 'x86_64')
url="http://gmplib.org/"
license=('LGPL3')
source=(ftp://ftp.gmplib.org/pub/gmp-${pkgver}/gmp-${pkgver}.tar.xz{,.sig})

build() {
  cd "${srcdir}/gmp-${pkgver}"

  ./configure --build=$CHOST --prefix= \
    --disable-shared --disable-cxx
  make
}

check() {
  cd "${srcdir}/gmp-${pkgver}"

  make check
}

package() {
  cd "${srcdir}/gmp-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
